// Map curated samples into mock products
const extraMock = sampleProducts.map((p, i) => ({
id: `px${i + 1}`,
slug: p.slug,
title: p.title,
description: p.description,
priceCents: p.priceCents,
imageUrl: p.imageUrl,
active: p.active,
}))

// De-duplicate by slug (remove duplicates of PSN Gift Card & Steam Wallet Code, etc.)
const combined = [...baseProducts, ...extraMock]
const seen = new Set<string>()
export const mockProducts: MockProduct[] = combined.filter((p) => {
if (seen.has(p.slug)) return false
seen.add(p.slug)
return true
})

